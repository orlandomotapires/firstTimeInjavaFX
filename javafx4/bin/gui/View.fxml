<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <Label layoutX="15.0" layoutY="68.0" text="Calculate Sum">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumber1" layoutX="15.0" layoutY="114.0" promptText="First Number" />
      <TextField fx:id="txtNumber2" layoutX="15.0" layoutY="163.0" promptText="Second Number" />
      <Button fx:id="btSum" layoutX="15.0" layoutY="206.0" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum" />
      <Label layoutX="14.0" layoutY="260.0" text="Result = " />
      <Label fx:id="labelResult" layoutX="68.0" layoutY="260.0" />
   </children>
</AnchorPane>
